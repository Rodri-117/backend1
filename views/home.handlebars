<h1 class="mb-4">Productos disponibles</h1>

<div class="row">
    {{#each productos}}
        <div class="col-md-4 mb-3">
        <div class="card h-100">
            {{#if this.thumbnails.[0]}}
            <img src="{{this.thumbnails.[0]}}" class="card-img-top" alt="{{this.title}}">
            {{/if}}
            <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text mb-1"><strong>Precio:</strong> ${{this.price}}</p>
            <p class="card-text mb-2"><strong>Categoría:</strong> {{this.category}}</p>
            <div class="mt-auto">
                <a href="/products/{{this._id}}" class="btn btn-primary btn-sm mb-2 w-100">Ver detalle</a>
                <form action="/api/carts/{{../cartId}}/products/{{this._id}}" method="post">
                <button class="btn btn-success btn-sm w-100" type="submit">Agregar al carrito</button>
                </form>
            </div>
            </div>
        </div>
        </div>
    {{/each}}
    </div>

    <nav aria-label="Paginación" class="mt-4">
    <ul class="pagination justify-content-center">
        {{#if pagination.hasPrevPage}}
        <li class="page-item">
            <a class="page-link" href="{{pagination.prevLink}}" aria-label="Anterior">
            <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        {{else}}
        <li class="page-item disabled"><span class="page-link">&laquo;</span></li>
        {{/if}}

        <li class="page-item active"><span class="page-link">{{pagination.page}}</span></li>

        {{#if pagination.hasNextPage}}
        <li class="page-item">
            <a class="page-link" href="{{pagination.nextLink}}" aria-label="Siguiente">
            <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
        {{else}}
        <li class="page-item disabled"><span class="page-link">&raquo;</span></li>
        {{/if}}
    </ul>
</nav>

